<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

    <TextView
    android:id="@+id/add-edit-title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add/Edit Mood" />

<EditText
    android:id="@+id/date-selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="datetime"
    style="@android:style/Widget.Holo.Spinner"/>

<!--    android:inputType="date" -->

<Spinner
    android:id="@+id/emojis-spinner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:entries="@array/emojis_array"
    android:prompt="@string/emoji_prompt" />

<EditText
    android:id="@+id/reason-field"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textMultiLine"
    android:hint="Reason" />

<EditText
    android:id="@+id/social-situ-field"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textMultiLine"
    android:hint="Social Situation" />
</LinearLayout>